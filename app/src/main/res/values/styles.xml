<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:activatedBackgroundIndicator">@drawable/activatedbackground</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name ="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="homeAsUpIndicator">@drawable/ic_back2</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="PopupMenu">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>
    <style name="CircularProgress">
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="edit_button">
        <item name="android:background">@android:drawable/btn_default</item>
        <item name="android:layout_width">0sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ToolbarColoredBackArrow">
        <item name="android:textColorSecondary">@color/navigation_drawer_color</item>
    </style>
</resources>