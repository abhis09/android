<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/frame_container_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/background_color"
            app:contentInsetStart="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_back2" />

                <RelativeLayout
                    android:id="@+id/toolbarrel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/btnadd"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/favrv"
                    android:layout_toRightOf="@+id/btnBack">

                    <com.example.new_meditation.FontText.TextViewFontStyle
                        android:id="@+id/txtTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:lines="1"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <com.example.new_meditation.FontText.TextViewFontStyle
                        android:id="@+id/txtType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtTitle"
                        android:textColor="#ffffff"
                        android:layout_centerInParent="true"
                        android:textSize="14sp"
                        android:visibility="visible" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/btnadd"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_add_playlist"
                    app:tint="@color/black" />

                <RelativeLayout
                    android:id="@+id/favrv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/btnadd">

                    <ImageView
                        android:id="@+id/btnfav"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:src="@drawable/ic_fav"
                        app:tint="@color/black" />

                    <ImageView
                        android:id="@+id/btnfavfull"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:padding="@dimen/_5sdp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:src="@drawable/ic_fav_full"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <com.example.new_meditation.FontText.TextViewFontStyle
                android:id="@+id/txtDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <com.example.new_meditation.FontText.TextViewFontStyle
                android:id="@+id/txtComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDuration"
                android:layout_centerHorizontal="true"
                android:text="Meditation Completed "
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line"/>
            <FrameLayout
                android:id="@+id/seekArcContainer"
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:layout_centerInParent="true"
                android:visibility="visible">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:civ_border_width="0dp" />

                <com.example.new_meditation.FontText.TextViewFontStyle
                    android:id="@+id/seekArcProgressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_vertical|center_horizontal|center"
                    android:layout_margin="30dp"
                    android:text="10:00"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:id="@+id/lnbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/btn_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#0000"
                        android:src="@drawable/pause" />
                </LinearLayout>
            </FrameLayout>
            <com.example.new_meditation.CircularSeekBar
                android:id="@+id/picker"
                android:layout_width="210dp"
                android:layout_height="210dp"
                app:progressBackgroundColor="@color/txt_color"
                app:progressColor="@color/txt_color"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_img"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_20sdp">

            <ImageView
                android:id="@+id/img_volume"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/ic_volume_up_white_48dp"
                app:tint="@color/black" />

            <app.minimize.com.seek_bar_compat.SeekBarCompat
                android:id="@+id/materialSeekBar"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/img_volume"
                android:maxHeight="500dp"
                app:progressBackgroundColor="@color/light_gray_header_color"
                app:progressColor="@color/txt_color"
                app:thumbAlpha="2"
                android:thumb="@drawable/volome_round" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
