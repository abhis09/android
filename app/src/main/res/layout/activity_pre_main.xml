<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PreMain">

    <LinearLayout
        android:id="@+id/li1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/menu"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_baseline_menu_24"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/logo"/>
<!--        <ImageView-->
<!--            android:id="@+id/start_meditation"-->
<!--            android:layout_width="@dimen/_180sdp"-->
<!--            android:layout_height="@dimen/_80sdp"-->
<!--            android:layout_marginTop="@dimen/_50sdp"-->
<!--            android:layout_marginBottom="@dimen/_5sdp"-->
<!--            android:src="@drawable/start_meditation" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_125sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_bg_main" />

                <RelativeLayout
                    android:id="@+id/rl_relax_music"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="openMeditationMusic"
                    android:paddingStart="12dp">

                    <ImageView
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:tint="@color/white"
                        android:src="@drawable/ic_next"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/title2"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="0dp"
                        android:text="Explore"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:text="Relax Music"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/_125sdp"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:cardBackgroundColor="#00ffffff"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_bg_main" />

                <RelativeLayout
                    android:id="@+id/rl_meditation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="openRelaxMusic"
                    android:paddingStart="12dp">

                    <ImageView
                        android:padding="@dimen/_5sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:tint="@color/white"
                        android:src="@drawable/ic_next"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/title"
                        android:layout_marginStart="15sp"
                        android:text="Explore"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:text="Meditation Music"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/playlist"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/playlist" />
    </LinearLayout>
</LinearLayout>